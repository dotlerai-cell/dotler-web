# Firebase Configuration
# Get these from Firebase Console → Project Settings → General
VITE_FIREBASE_API_KEY=your_api_key_here
VITE_FIREBASE_AUTH_DOMAIN=your-project.firebaseapp.com
VITE_FIREBASE_PROJECT_ID=your-project-id
VITE_FIREBASE_STORAGE_BUCKET=your-project.firebasestorage.app
VITE_FIREBASE_MESSAGING_SENDER_ID=your_sender_id
VITE_FIREBASE_APP_ID=your_app_id
VITE_FIREBASE_MEASUREMENT_ID=your_measurement_id

# Meta OAuth Configuration
# Get these from https://developers.facebook.com/apps/ → Settings → Basic
VITE_META_APP_ID=your_meta_app_id
VITE_META_APP_SECRET=your_meta_app_secret
VITE_META_REDIRECT_URI=https://your-domain.web.app/auth/callback

# ⚠️ SECURITY WARNING:
# - NEVER commit the actual .env file to git
# - App Secret should NEVER be in frontend in production
# - Use Cloud Functions for production token exchange
# - For local development, create .env.local with localhost redirect URI

# Optional: Direct API Access (for testing without OAuth)
VITE_META_ACCESS_TOKEN=
VITE_META_AD_ACCOUNT_ID=

# Gemini API Configuration
# Get your API key from https://makersuite.google.com/app/apikey
VITE_GEMINI_API_KEY=your_gemini_api_key_here
